# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# swap managed window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move managed window
cmd + shift + alt - h : yabai -m window --warp west
cmd + shift + alt - j : yabai -m window --warp south
cmd + shift + alt - k : yabai -m window --warp north
cmd + shift + alt - l : yabai -m window --warp east

# send window to desktop
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6

# increase window size
shift + alt - q : yabai -m window --resize left:-100:0
shift + alt - e : yabai -m window --resize right:100:0

shift + alt - a : yabai -m window --resize left:-50:0
shift + alt - d : yabai -m window --resize right:50:0
shift + alt - w : yabai -m window --resize top:0:-50
shift + alt - s : yabai -m window --resize bottom:0:50

# decrease window size
shift + alt + cmd - q : yabai -m window --resize left:100:0
shift + alt + cmd - e : yabai -m window --resize right:-100:0

shift + alt + cmd - a : yabai -m window --resize left:50:0
shift + alt + cmd - d : yabai -m window --resize right:-50:0
shift + alt + cmd - w : yabai -m window --resize top:0:50
shift + alt + cmd - s : yabai -m window --resize bottom:0:-50

# rotate tree
alt - r : yabai -m space --rotate 90

# toggle window fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window parent zoom
alt - d : yabai -m window --toggle zoom-parent

# toggle window split type
alt - e : yabai -m window --toggle split

# float / unfloat window
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2
