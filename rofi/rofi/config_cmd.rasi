/* global settings and color variables */
* {
   blackdarkest:     #121715;
   maincolor:        #D8AA32;
   bodycolor:        #e8d499;
   selectedcolor:    #D8AA32;
   highlight:        bold #7B8438;
   urgentcolor:      #CF9722;
   font: "Roboto Mono Regular 11";
   background-color: @blackdarkest;
   text-color: @bodycolor;
   spacing: 0px;
   border: 0px;
}

window {
   background-color: @blackdarkest;
   border: 0px;
   margin: 0px 0px 0px 0px;
   anchor: south;
   location: south;
   width: 100%;
   height: 42px;
   children: [ horibox ];
}

horibox {
    orientation: horizontal;
    children:   [ textbox-prpt, entry, listview ];
}

listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      5;
    text-color: @bodycolor;
}

textbox-prpt {
  expand: false;
  content: "ï…• RUN";
  padding: 8px 18px 5px 20px;
  text-color: @maincolor;
}

prompt {
   enabled: true;
   padding: 8px 18px 5px 20px;
   text-color: @maincolor;
}

entry {
    expand:     false;
    padding: 8px 0 0 0;
    width:      20em;
    text-color: @bodycolor;
}

element {
    padding: 8px 5px;
    text-color: @bodycolor;
}

element selected {
    background-color: @selectedcolor;
}

element-text selected {
    background-color: @selectedcolor;
    text-color: @blackdarkest;
}
